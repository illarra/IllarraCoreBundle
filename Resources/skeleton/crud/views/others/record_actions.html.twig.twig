<div class="button-bar">
            <ul class="button-group radius">
                <li>{{ "{{ helper.action_back_button(path('"~ route_name_prefix ~"_index')) }}" }}</li>
            </ul>
{% if ('edit' in actions) and (not hide_edit) %}
            <ul class="button-group radius">
                <li>{{ "{{ helper.action_edit_button(path('"~ route_name_prefix ~"_edit', { 'id': entity.id })) }}" }}</li>
            </ul>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
            <ul class="button-group radius">
                <li>
                    <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}" method="POST">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ "{{ form_widget(delete_form) }}" }}
                        <button class="t-delete alert button" type="submit">{{ "{{ 'action.delete'|trans }}" }}</button>
                    </form>
                </li>
            </ul>
{% endif %}
        </div>
