    <script type="text/javascript">
        $(function () {
            $('.container-fluid').removeClass('container-fluid').addClass('container');
            $('.navbar').addClass('navbar-inverse');
            $('table.table-bordered.table-striped').removeClass('table-bordered').removeClass('table-striped');
            $('.sonata-filter-form').addClass('well');
            $('.filter_container .btn').addClass('btn-small');
            $('.form-horizontal').removeClass('form-horizontal');
            $('.form-actions .btn-primary').toggleClass('btn-primary btn-success');

            // Chosen
            $('.sonata-ba-form select').chosen({ 
                allow_single_deselect: true,
                disable_search_threshold: 10,
                no_results_text: "Oops, nothing found!"
            });
        });
    </script>
