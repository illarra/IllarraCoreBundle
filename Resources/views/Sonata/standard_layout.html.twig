{% extends "SonataAdminBundle::standard_layout.html.twig" %}

{% block stylesheets %}
    <!-- jQuery code -->
    <link rel="stylesheet" href="{{ asset('bundles/sonatajquery/themes/flick/jquery-ui-1.8.16.custom.css') }}" type="text/css" media="all" />

    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,400italic,700" rel="stylesheet" type="text/css">
    {% stylesheets
        "@IllarraCoreBundle/Resources/assets/vendor/chosen/chosen/chosen.css"
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
    <style>
        h1 {
            font-weight: 300;
        }
        body {
            color: #000;
            font-size: 13px;
            font-family: "Open Sans", "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
        }
        .navbar-inverse .navbar-inner {
            background: #333333;
        }
        .navbar-fixed-top {
            position: static;
            margin-bottom: 30px;
        }
        .navbar .brand {
            color: white;
            font-size: 17px;
            font-weight: 300;
            text-shadow: none;
        }
        .map-content .map-canvas {
            height: 300px;
            width: 100%;
        }
        .map-content .map-canvas img {
            max-width: none !important;
        }
        .map-content .postfix {
            height: 2.5em;
        }
        .subheader-color {
            color: #626262;
        }
        .sonata-actions {
            margin-bottom: 20px;
            float: right; /* remove float in mobile */
        }
        table tr:hover {
            background-color: #fafafa;
        }
        .sonata-ba-list-field-header-batch {
            width: 15px;
        }
        .breadcrumb {
            font-size: 16px;
            font-weight: 300;
        }
        .form-actions .btn {
            margin-left: 5px;
            margin-right: 5px;
        }
        .form-actions.well form {
            margin: 0;
        }
        label.required:after {
            content: " *";
            font-weight: bold;
            color: red;
        }
    </style>
{% endblock %}

